<!DOCTYPE html>
<html>
  <head>
    <title>Book Share</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-md navbar-dark bg-primary" id="banner">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">&lt;TBD&gt; Book Share</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to "Home", root_path, :class => 'btn' %></li>
          </ul>
          <ul class="nav navbar-nav pull-right" id="user_info">
            <% if auth_user_signed_in? %>
              <li><%= link_to current_auth_user.current_profile.name, edit_auth_user_registration_path %></li>
              <li><%= button_link_to "Logout", destroy_auth_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Log In", new_auth_user_session_path, :class => 'btn' %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div> 
    </div>
  </header>
  <main id="content">
    <%= yield %>
  </main>
</body>
</html>
